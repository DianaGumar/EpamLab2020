@model IEnumerable<TicketManagement.Domain.VenueModels>

@{
    ViewBag.Title = "_IndexVenueOnlyNames";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>IndexOnlyNames</h2>

<div class="form-group row">
    <label asp-for="Time_volume" class="control-label col-4">Execution time</label>
    <select class="custom-select col-8" asp-for="Time_volume">

        @foreach (var item in Model)
        {
            <option value="@item.Description">@item</option>
        }

    </select>

</div>


<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Description)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Address)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Address)
            </td>
            <td>
                @Html.ActionLink("Details", "Details", new { /* id=item.PrimaryKey */ })
            </td>
        </tr>

        <div class="container">
            @Html.Action("_IndexLayoutOnlyNames", "Member", new { id = item.VenueId })
        </div>
    }

</table>
