@model TicketManagement.Domain.DTO.TMEventDto

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<p></p>
<span>
    @Html.ActionLink("< Back to List", "Index", null, new { @style = "font-size:medium" })
</span>

<div class="col">
    <div class="container" style="margin-top: 20px;">
        <div class="row">
            <div class="col-lg-3">
                <div class="container" style="max-width:270px; overflow:hidden; margin-left:-15px">
                    <img src="@Model.Img" class="img-fluid" height="300">
                </div>
            </div>
            <div class="col-lg-6">
                @if (User.IsInRole("eventmanager"))
                {
                    <div class="pull-right">
                        @Html.ActionLink("Set price", "SetSeveralPrice", "Purchase",
                               new { idEvent = Model.Id }, new { @class = "btn btn-sm btn-default" })
                        @Html.ActionLink("Edit", "Edit", new { id = Model.Id }, new { @class = "btn btn-sm btn-primary edit" })
                        @Html.ActionLink("Details", "Details", new { id = Model.Id }, new { @class = "btn btn-sm btn-primary details" })
                        @Html.ActionLink("Delete", "Delete", new { id = Model.Id }, new { @class = "btn btn-sm btn-danger delete" })
                    </div>
                }
                <p>
                    <span class="text-info">@Html.DisplayFor(modelItem => Model.StartEvent)</span> --

                    <span class="text-info">@Html.DisplayFor(modelItem => Model.EndEvent)</span>
                </p>
                <br />
                <p>
                    <span class="text-muted" style="font-size: medium; ">
                        in layout id @Html.DisplayFor(modelItem => Model.TMLayoutId)
                    </span>
                    <br />
                    <span class="text-capitalize" style="font-size:xx-large; ">
                        @Html.DisplayFor(modelItem => Model.Name)
                    </span>
                    <br />
                    <span class="text-muted" style="font-size: medium;">
                        @Html.DisplayFor(modelItem => Model.Description)
                    </span>
                </p>
                <div style="margin-top:20px;">
                    <span class="text-capitalize text-danger" style="font-size:medium; ">
                        Busy seats @Html.DisplayFor(modelItem => Model.BusySeats)
                        <br />
                        All seats @Html.DisplayFor(modelItem => Model.AllSeats)
                    </span>
                    <br />
                    <span class="text-success" style="font-size:medium; ">
                        MIDDLE PRISE BY SEAT <span id="tmMiddlePrise">@Html.DisplayFor(modelItem => Model.MiddlePriceBySeat)</span> $
                    </span>
                    <p class="pull-right">
                        @Html.ActionLink("SHOUSE SEATS", "BuyTicket", "Purchase",
                       new { idEvent = Model.Id },
                       new { @class = "btn btn-primary", id="TMChouseSeatsButton" })
                    </p>
                </div>
            </div>
        
            <div class="col-lg-3">
                <h4>Venue map</h4>
                 <div class="container">
                    @Html.Action("LayoutMap", "VenueModels",
                    new { idlayout = Model.TMLayoutId })
                 </div>
            </div>
        </div>
    </div>
</div>








