@model TicketManagement.Web.Models.AddBalanceViewModel
@{
    ViewBag.Title = "TopUpBalance";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@ViewBag.Title.</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
<h4>Your current balance = @Model.CurrentBalance</h4>
    <hr />
    @Html.ValidationSummary("", new { @class = "text-danger" })
    <div class="form-group">
        @Html.LabelFor(m => m.TopUpSum, new { @class = "col-md-2 control-label" })
        <div class="col-md-3">
            @Html.TextBoxFor(m => m.TopUpSum, new { @class = "form-control" })
        </div>
         <input type="submit" class="btn btn-default" value="Top up" id="tm-topup-balanse-btn" />
    </div>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            
        </div>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
