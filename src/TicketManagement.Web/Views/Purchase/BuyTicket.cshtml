@model TicketManagement.Web.Models.TMEventSeatIdViewModel

@{
    ViewBag.Title = "BuyTicket";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h3>Seats map</h3>

<p></p>
<span>
    @Html.ActionLink("< Back to List", "Index", "TMEventModels", null, new { @style = "font-size:medium" })
</span>

<div class="container col align-self-center">
    @Html.Action("AreasMap", "TMEventAreaModels", Model.TMEventId)
</div>

<div class="container col align-self-center">

    @using (Html.BeginForm("BuyTicket", "Purchase"))
    {
        @Html.AntiForgeryToken()

        <div class="row">
            @Html.LabelFor(model => model.TMEventId, htmlAttributes: new { @class = "control-label col-md-1" })
            <div class="col-md-3">
                @Html.EditorFor(model => model.SeatsId, new { title="enter some like: 1,2,5", htmlAttributes = new { @class = "form-control myedit" } })
                @Html.ValidationMessageFor(model => model.TMEventId, "", new { @class = "text-danger" })
            </div>
            <div class="form-group col-md-1">
                <input type="submit" value="Buy" class="btn btn-default" name="ActionRegister" />
            </div>
        </div>
    }
</div>

